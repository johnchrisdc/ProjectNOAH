<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/item"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rowIcon"
            android:paddingLeft="16dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="4dp"
            android:textAppearance="@style/TextAppearanceDrawer"
            android:text="Medium Text"
            android:id="@+id/rowText" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginLeft="55dp"
        android:id="@+id/sub_items"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:textAppearance="@style/TextAppearanceDrawer"
            android:text="Contour"
            android:id="@+id/rowContour" />

        <LinearLayout
            android:visibility="gone"
            android:layout_marginLeft="25dp"
            android:id="@+id/sub_items_contour"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingTop="10dp"
                android:textAppearance="@style/TextAppearanceDrawer"
                android:text="1-hour Rainfall Contour"
                android:id="@+id/rowContour1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingTop="10dp"
                android:textAppearance="@style/TextAppearanceDrawer"
                android:text="3-hour Rainfall Contour"
                android:id="@+id/rowContour3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingTop="10dp"
                android:textAppearance="@style/TextAppearanceDrawer"
                android:text="6-hour Rainfall Contour"
                android:id="@+id/rowContour6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingTop="10dp"
                android:textAppearance="@style/TextAppearanceDrawer"
                android:text="12-hour Rainfall Contour"
                android:id="@+id/rowContour12" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:textAppearance="@style/TextAppearanceDrawer"
            android:text="Doppler Stations"
            android:id="@+id/rowDoppler" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:textAppearance="@style/TextAppearanceDrawer"
            android:text="Real Time River Inundations"
            android:id="@+id/rowRiver" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:textAppearance="@style/TextAppearanceDrawer"
            android:text="Satellite"
            android:id="@+id/rowSatellite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:textAppearance="@style/TextAppearanceDrawer"
            android:text="Weather Outlook"
            android:id="@+id/rowWeatherOutlook" />

    </LinearLayout>

</LinearLayout>